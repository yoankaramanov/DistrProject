@model IMDB.Models.Company

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>@Html.DisplayFor(model => model.CompanyName)</h4>
    <img src="@Html.DisplayFor(model => model.ImageURL)" height="340"  />
    <hr />
    <dl class="dl-horizontal">
    
        <dt>
            Net worth
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NetWorth) mil.
        </dd>

        <dt>
            Founding date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FoundingDate)
        </dd>

        <dt>
            Country
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Country)
        </dd>

        <dt>
            Annual income
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AnnualIncome) mil.
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.CompanyId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
